<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/item_bill_rl_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x65"
        android:orientation="horizontal"
       android:gravity="center_vertical"
        android:background="@color/color_primary_white"
        >
       <RelativeLayout
           android:layout_width="@dimen/x50"
           android:layout_height="@dimen/x50"
           android:gravity="center"
           android:layout_marginLeft="@dimen/x15"
           >
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/bill_item_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               />
       </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:weightSum="4"
                android:layout_marginRight="@dimen/x10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x12"
                >
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/bill_item_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxEms="7"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/color_primary_black"
                    />

                <TextView
                    android:id="@+id/tv_turnover"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/x5"
                    android:text=""
                    android:textColor="@color/color_primary_black" />

                <TextView
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/color_primary_black"
                    android:id="@+id/tv_income"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x5">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/x12"
                        android:id="@+id/bill_item_day"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/x12"
                        android:id="@+id/bill_item_time"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/bill_item_Money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/red_money"
                    android:textSize="@dimen/x17"
                    android:layout_marginRight="@dimen/x10"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/x1"
        android:background="@color/color_fade_gray"
        android:layout_marginLeft="@dimen/x20"
        />
</LinearLayout>
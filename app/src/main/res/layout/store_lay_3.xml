<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_primary_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:background="@color/color_divider_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50">
        <LinearLayout
            android:id="@+id/store_lay_3_ll_to_store_address_map"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="@dimen/x10"
                    android:src="@mipmap/icon_store_locate_gray"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/store_lay_3_tv_store_address"
                    android:lineSpacingExtra="@dimen/x2"
                    android:textSize="@dimen/x15"
                    android:text=""
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/store_lay_3_rl_to_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_store_call_red" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:background="@color/color_divider_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10" />

</LinearLayout>

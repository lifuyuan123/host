<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--订单列表-->
    <RelativeLayout
        android:id="@+id/order_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/icon"
            android:id="@+id/friend_item_icon"
            android:layout_margin="@dimen/x10"
            android:layout_width="@dimen/x50"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:layout_toRightOf="@+id/friend_item_icon"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="于莎莎店内消费"
                    android:textSize="@dimen/x14"
                    android:textColor="@color/color_text"
                    android:layout_gravity="left|center_vertical"
                    android:id="@+id/friend_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="right|center_vertical"
                    android:text="￥500"
                    android:textColor="@color/color_primary_black"
                    android:textSize="@dimen/x14"
                    android:id="@+id/friend_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/x10"
            android:layout_toRightOf="@+id/friend_item_icon"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/friend_item_time"
                android:text="4月15日 17:57"
                android:textSize="@dimen/x12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="@dimen/x10"
        android:background="@color/color_txt_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
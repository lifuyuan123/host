<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/x320"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal"
        android:background="@color/color_primary_white"
        android:gravity="center_vertical"
        >
        <CheckBox
            android:id="@+id/beautican_manage_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/beautican_manage_ll"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/beautican_manage_icon"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x60"
                    />
                <TextView
                    android:id="@+id/beautican_manage_nameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小浩"
                    android:textSize="@dimen/x15"
                    android:textColor="@color/color_primary_black"
                    android:layout_marginLeft="@dimen/x10"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/color_fade_gray"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
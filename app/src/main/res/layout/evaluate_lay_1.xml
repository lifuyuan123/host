<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/x320"
        android:layout_height="@dimen/x150"
        android:orientation="vertical"
        android:background="@mipmap/ic_mvaluate_title"
        android:gravity="center"
        >
        <com.github.ornolfr.ratingview.RatingView
            android:id="@+id/evaluate_lay1_ratingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawable_half="@mipmap/icon_star_half"
            app:drawable_empty="@mipmap/icon_star_empty"
            app:drawable_filled="@mipmap/icon_star_full"
            app:drawable_margin="2dp"
            app:drawable_size="@dimen/x16"
            app:is_indicator="true"
            app:max_count="5"
            app:rating="5" />
        <LinearLayout
            android:layout_marginTop="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺评分:"
                android:textColor="@color/color_primary_white"
                android:textSize="@dimen/x14"
                />
            <TextView
                android:id="@+id/evaluate_lay1_fraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="@dimen/x5"
                android:textColor="@color/color_primary_white"
                android:textSize="@dimen/x14"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
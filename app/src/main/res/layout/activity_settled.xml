<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_primary_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sctjsj.mayk.wowallethost.ui.activity.SettledActivity">

    <!--title-->
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/settled_lin_back"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <ImageView
            android:src="@mipmap/icon_left_white_arrow"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
    </LinearLayout>


    <LinearLayout
         android:layout_weight="1"
         android:orientation="vertical"
         android:layout_marginTop="@dimen/x20"
         android:gravity="center_horizontal"
         android:layout_width="match_parent"
         android:layout_height="0dp">


         <ImageView
             android:src="@drawable/settled_icon"
             android:layout_width="@dimen/x200"
             android:layout_height="@dimen/x200" />
         <TextView
             android:layout_marginTop="@dimen/x30"
             android:gravity="center"
             android:text="恭喜您入驻成功"
             android:textSize="@dimen/x18"
             android:textColor="@color/color_primary_white"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

         <TextView
             android:layout_marginTop="@dimen/x30"
             android:gravity="center"
             android:layout_marginLeft="@dimen/x40"
             android:layout_marginRight="@dimen/x40"
             android:text="您提交的资料已经通过审核,您可以通过您的账号对店铺进行编辑管理."
             android:textSize="@dimen/x14"
             android:lineSpacingExtra="@dimen/x5"
             android:textColor="@color/color_primary_white"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

         <TextView
             android:id="@+id/settled_tv_gonhome"
             android:layout_marginTop="@dimen/x40"
             android:layout_marginRight="@dimen/x40"
             android:layout_marginLeft="@dimen/x40"
             android:background="@drawable/settled_backgroud"
             android:gravity="center"
             android:text="去我的主页"
             android:textSize="@dimen/x16"
             android:textColor="@color/color_primary_blue"
             android:layout_width="match_parent"
             android:layout_height="@dimen/x40" />


     </LinearLayout>
</LinearLayout>

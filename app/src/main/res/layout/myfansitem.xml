<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_primary_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/fansItem_mainLayout"
        android:layout_width="@dimen/x320"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/fansItem_layout"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x60"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fansItem_icon"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:src="@mipmap/icon_default_portrait"
                />
            <LinearLayout
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/fansItem_fansName"
                    android:gravity="center_vertical"
                    android:text=""
                    android:layout_marginLeft="@dimen/x20"
                    android:textColor="@color/text_color"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:layout_width="@dimen/x60"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:src="@mipmap/icon_arrow_gray_right"
                        />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/app_fade_gray"
            />
        <Button
            android:id="@+id/fansItem_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:background="@color/white"
            android:text=""
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"
            android:background="@color/app_fade_gray"
            />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_primary_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingBottom="@dimen/x5"
        android:paddingTop="@dimen/x10"
        android:paddingRight="@dimen/x7"
        android:paddingLeft="@dimen/x7"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/store_lay_6_iv"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_home_test_8"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80" />
        </RelativeLayout>


            <TextView
                android:id="@+id/store_lay_6_tv_name"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/x5"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/store_lay_6_tv_job"
            android:layout_marginBottom="@dimen/x5"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/x5"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>





</LinearLayout>

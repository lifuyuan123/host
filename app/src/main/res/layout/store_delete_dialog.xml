<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x180">

        <RelativeLayout
            android:background="@color/color_primary_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x130">
            <ImageView
                android:layout_alignParentBottom="true"
                android:background="@drawable/dialog_backgroud_icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x60" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_primary_white"
                        android:id="@+id/tv_number"
                        android:text="是否确认删除？"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_primary_white"
                        android:id="@+id/tv_number2"
                        android:text="是否确认删除？"
                        android:layout_marginTop="@dimen/x5"
                        android:visibility="gone"
                        />

                </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_close"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30">
                <ImageView
                    android:src="@drawable/icon_delete"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20" />
            </LinearLayout>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/item_confirm"
            android:background="@color/color_primary_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">
            <TextView
                android:gravity="center"
                android:text="确定"
                android:textSize="@dimen/x16"
                android:textColor="@color/color_primary_blue"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pay_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.PayDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/pay_detail_back_rl"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x40"
            android:layout_height="match_parent"
            android:text="支付详情"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/x5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.soundcloud.android.crop.CropImageView
                    android:id="@+id/pay_detail_storeIcon"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_default_portrait"
                    />
                <TextView
                    android:id="@+id/pay_detail_storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:textColor="@color/text_color"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/x1"
            android:background="@color/color_fade_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/pay_detail_Money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="40sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="交易完成"
                android:textColor="@color/text_color"
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/x1"
            android:background="@color/color_fade_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/x10"
            >
          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/x10"
                >
                <TextView
                    android:layout_width="@dimen/x70"
                    android:layout_height="wrap_content"
                    android:text="付款信息："
                    android:layout_marginLeft="@dimen/x10"
                    />
                <TextView
                    android:id="@+id/pay_detial_payWay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/x10"
                >
                <TextView
                    android:layout_width="@dimen/x70"
                    android:layout_height="wrap_content"
                    android:text="创建时间："
                    android:layout_marginLeft="@dimen/x10"
                    />
                <TextView
                    android:id="@+id/pay_detail_insterTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/x10"
                >
                <TextView
                    android:layout_width="@dimen/x70"
                    android:layout_height="wrap_content"
                    android:text=" 交 易 号 ："
                    android:layout_marginLeft="@dimen/x10"
                    />
                <TextView
                    android:id="@+id/Pay_detial_orderName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>

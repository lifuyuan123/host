<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/x320"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_primary_white"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:layout_marginLeft="@dimen/x10"
                android:id="@+id/lay_comment_icon"
                android:src="@mipmap/ic_usericon"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="@dimen/x10"
                        android:textSize="@dimen/x13"
                        android:textColor="#456989"
                        android:layout_marginLeft="@dimen/x10"
                        android:id="@+id/lay_comment_name" />

                    <TextView
                        android:id="@+id/lay_comment_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:layout_marginTop="@dimen/x10"
                        android:layout_marginRight="@dimen/x15"
                        />
                </LinearLayout>
                <com.github.ornolfr.ratingview.RatingView
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/x10"
                    android:id="@+id/lay_comment_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:drawable_half="@mipmap/icon_star_half"
                    app:drawable_empty="@mipmap/icon_star_empty"
                    app:drawable_filled="@mipmap/icon_star_full"
                    app:drawable_margin="2dp"
                    app:drawable_size="@dimen/x16"
                    app:is_indicator="true"
                    app:max_count="5"
                    app:rating="5" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/lay_comment_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:text=""
            android:textColor="@color/color_primary_black"
            android:lines="2"
            android:textSize="@dimen/x14"
            android:ellipsize="end"
            />
        <LinearLayout
            android:id="@+id/lay3_Imglay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x110"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/lay_comment_one"
                android:layout_width="@dimen/x95"
                android:layout_height="@dimen/x95"
                android:layout_marginLeft="@dimen/x10"

                />

            <ImageView
                android:layout_width="@dimen/x95"
                android:layout_height="@dimen/x95"
                android:layout_marginLeft="@dimen/x6"
                android:id="@+id/lay_comment_tow"

                />

            <RelativeLayout
                android:layout_marginLeft="@dimen/x6"
                android:layout_width="@dimen/x95"
                android:layout_height="@dimen/x95">
                <ImageView
                    android:id="@+id/lay_comment_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <RelativeLayout
                    android:id="@+id/store_rv_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/x5"
                    android:layout_marginRight="@dimen/x5"
                    android:background="@drawable/x_full_black_retangle_border"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5">

                    <TextView
                        android:id="@+id/store_tv_photo"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/color_primary_white" />
                </RelativeLayout>
            </RelativeLayout>
            
        </LinearLayout>
        <LinearLayout
            android:id="@+id/evaluate_reply_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center_vertical|right"
            >
            <Button
                android:id="@+id/evaluate_reply_btn"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x25"
                android:text="回复"
                android:textSize="@dimen/x12"
                android:layout_marginRight="@dimen/x10"
                android:textColor="@color/color_primary_white"
                android:background="@drawable/evalute_lay3_buttonback"
                />
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/evaluate_replyedt_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/evalute_lay3_edt"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入回复...."
                android:textColor="@color/color_primary_black"
                android:textColorHint="@color/color_txt_gray"
                android:gravity="center_vertical"
                android:background="@null"
                android:id="@+id/evaluate_lay3_edt"
                />
            <Button
                android:id="@+id/evaluate_replyedt_img"
                android:layout_below="@+id/evaluate_lay3_edt"
                android:layout_alignRight="@+id/evaluate_lay3_edt"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x25"
                android:text="提交"
                android:textSize="@dimen/x12"
                android:textColor="@color/color_primary_white"
                android:background="@drawable/submit_bt"
                />
        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/evaluate_bossSpeak_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_host_reply_comment"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x30"
                    android:text="回复："
                    android:textColor="#FC8900"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x5"
                    android:textSize="@dimen/x12"
                    />
                <TextView
                    android:id="@+id/lay_comment_merchant_data"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="2017-05-25"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/x12"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="@dimen/x280"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x10"
                android:background="#f5f5f5"
                />
            <TextView
                android:id="@+id/lay_comment_merchant_cont"
                android:layout_marginTop="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:padding="@dimen/x5"
                android:textColor="@color/text_color"
                android:text=""
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x10"
            android:background="@color/color_fade_gray"
            />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sctjsj.mayk.wowallethost.ui.activity.UserInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/setting_back"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x40"
            android:layout_height="match_parent"
            android:text="个人资料"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        android:id="@+id/user_info_realNameLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/color_primary_black"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="@dimen/x15"
            android:text="真实姓名"
            android:gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/user_info_realName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x14"
                />
            <ImageView
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/x13"
                android:src="@mipmap/icon_arrow_gray_right"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="@dimen/x310"
        android:layout_height="@dimen/x1"
        android:background="@color/color_fade_gray"
        android:layout_marginLeft="@dimen/x10"
        />

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/user_info_alipayLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/color_primary_black"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="@dimen/x15"
            android:text="支付宝账号"
            android:gravity="center_vertical"
            android:id="@+id/textView7" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/user_info_alipayNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x14"
                />
            <ImageView
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/x13"
                android:src="@mipmap/icon_arrow_gray_right"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="@dimen/x310"
        android:layout_height="@dimen/x1"
        android:background="@color/color_fade_gray"
        android:layout_marginLeft="@dimen/x10"
        />

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/user_info_changeLoginPwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/color_primary_black"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="@dimen/x15"
            android:text="修改登陆密码"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x14"
                />
            <ImageView
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/x13"
                android:src="@mipmap/icon_arrow_gray_right"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_write_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ConfirmOrderActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/write_order_back"
            >

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView2" />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x40"
            android:layout_height="match_parent"
            android:text="确认订单"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            android:id="@+id/textView2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/color_primary_white"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/icon_default_portrait"
            android:id="@+id/confirm_order_Img"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x20"
            />
        <TextView
            android:id="@+id/confirm_storeName_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:layout_marginTop="@dimen/x15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:text="金额"
            android:textColor="@color/color_primary_black"
            android:layout_marginTop="@dimen/x10"
            android:textSize="@dimen/x15"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x45"
                android:text="¥"
                android:textColor="@color/color_primary_black"
                android:textSize="@dimen/x30"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x20"
                />
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/totPrice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:textColor="@color/color_primary_black"
                android:textSize="@dimen/x30"
                android:background="@null"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/writer_order_BtnSure"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x10"
            android:background="@drawable/ic_button_shape"
            android:text="确认支付"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x15" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_primary_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/store_lay_to_all_comment_rl_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <TextView
            android:textSize="@dimen/x16"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/x10"
            android:layout_centerVertical="true"
            android:text="店员"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginRight="@dimen/x10"
                android:id="@+id/store_lay_officer_title_tv_num"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/x14"
                android:gravity="center"
                android:text="暂无店员"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/store_lay_office_title_Img"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_arrow_gray_right"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20" />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_marginLeft="@dimen/x10"
        android:background="@color/color_divider_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1" />

</LinearLayout>

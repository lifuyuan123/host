<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ConfirmPayActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/pay_order_back"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x40"
            android:layout_height="match_parent"
            android:text="支付订单"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/color_primary_white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_txt_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x75"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/confirm_Store_Img"
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/x45"
                android:layout_marginLeft="@dimen/x20"
                android:src="@mipmap/icon_default_portrait"
                />
            <LinearLayout
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/confirm_pay_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary_black"
                    android:textSize="@dimen/x18"
                    />
                <TextView
                    android:id="@+id/confirm_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="沃钱包平台-分享者名额购买"
                    android:textColor="@color/color_primary_black"
                    android:textSize="@dimen/x11"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"
            android:background="@color/color_fade_gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="选择支付方式"
                android:gravity="center_vertical"
                android:textSize="@dimen/x11"
                android:paddingLeft="@dimen/x15"
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x305"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:background="@color/color_fade_gray"
            />


        <!--微信支付-->
        <LinearLayout
            android:id="@+id/pay_order_weixin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/ic_weixin"
                android:layout_marginLeft="@dimen/x15"
                />
            <LinearLayout
                android:layout_marginLeft="@dimen/x15"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textSize="@dimen/x15"
                    android:textColor="@color/color_primary_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐安装微信5.0及以上的用户使用"
                    android:textSize="@dimen/x10"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                >
                <ImageView
                    android:id="@+id/pay_order_weixinImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_check_no"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x305"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:background="@color/color_fade_gray"
            />

        <!--支付宝支付-->
        <LinearLayout
            android:id="@+id/ll_pay_order_alipayImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/ic_alipay"
                android:layout_marginLeft="@dimen/x15"
                />
            <LinearLayout
                android:layout_marginLeft="@dimen/x15"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"
                    android:textSize="@dimen/x15"
                    android:textColor="@color/color_primary_black"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                >
                <ImageView
                    android:id="@+id/pay_order_alipayImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_check_no"
                    />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x305"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x15"
            android:background="@color/color_fade_gray"
            />

        <!--余额支付-->
        <LinearLayout
            android:id="@+id/ll_pay_order_balance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_balance_red"
                android:layout_marginLeft="@dimen/x15"
                />
            <LinearLayout
                android:layout_marginLeft="@dimen/x15"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额支付"
                    android:textSize="@dimen/x15"
                    android:textColor="@color/color_primary_black"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                >
                <ImageView
                    android:id="@+id/iv_pay_order_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_check_no"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/pay_order_Btnsure"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/ic_button_shape"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x15" />
    </RelativeLayout>
</LinearLayout>

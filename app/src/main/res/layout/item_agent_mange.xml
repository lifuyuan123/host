<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/agent_item_storeName"
            android:layout_marginLeft="@dimen/x15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="克里缇娜高新店"
            android:textColor="@color/text_color"
            />
        <TextView
            android:id="@+id/agent_item_time"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="2017-10-12"
            android:textColor="@color/text_color"
            />

        <TextView
            android:id="@+id/agent_item_state"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="营业中"
            android:textColor="@color/text_color"
            />
    </LinearLayout>
    <TextView
        android:layout_width="@dimen/x305"
        android:layout_marginLeft="@dimen/x15"
        android:layout_height="@dimen/x1"
        android:background="@color/app_fade_gray"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/color_primary_white"
        android:layout_width="@dimen/x320"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:id="@+id/home_lin_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_order_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0单"
                android:textColor="@color/color_home_text"
                android:textSize="@dimen/x13"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史订单统计(单)"
                android:textColor="@color/color_text_home"
                android:layout_marginTop="@dimen/x10"
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x50"
            android:background="@color/color_txt_gray"
            />
        <LinearLayout
            android:id="@+id/home_lin_today"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_order_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日0单"
                android:textColor="@color/color_home_text"
                android:textSize="@dimen/x13"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日订单统计(单)"
                android:textColor="@color/color_text_home"
                android:layout_marginTop="@dimen/x10"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
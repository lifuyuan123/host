<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ForgetPassActivity">
    <!--title-->
    <RelativeLayout
        android:background="@color/color_primary_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <LinearLayout
            android:id="@+id/forgetpass_linear_back"
            android:layout_margin="@dimen/x5"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent">
            <ImageView
                android:layout_margin="@dimen/x6"
                android:id="@+id/forgetpass_iv_back"
                android:src="@mipmap/icon_left_white_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forgetpass_linear_centent"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="修改密码"
                android:textSize="@dimen/x16"
                android:textColor="@color/color_primary_white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

    <!--输入密码-->
    <RelativeLayout
        android:background="@drawable/x_normal_white_white_retangle_border"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">

        <EditText
            android:id="@+id/edt_psw"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:hint="请输入密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <!--输再次输入密码-->
    <RelativeLayout
        android:background="@drawable/x_normal_white_white_retangle_border"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">

        <EditText
            android:id="@+id/edt_psw_agin"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:hint="请再次输入密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


    <!--输入验证码-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <RelativeLayout
            android:background="@drawable/x_normal_white_white_retangle_border"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <EditText
                android:textSize="@dimen/x15"
                android:inputType="number"
                android:layout_centerInParent="true"
                android:id="@+id/edt_phone_code"
                android:gravity="center_vertical"
                android:hint="请输入短信验证码"
                android:singleLine="true"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <!--<RelativeLayout-->
            <!--android:background="@drawable/x_full_retangle_blue_border"-->
            <!--android:layout_marginLeft="@dimen/x15"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent">-->
            <!--<TextView-->
                <!--android:inputType="number"-->
                <!--android:id="@+id/tv_getCode"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:textColor="@color/color_primary_white"-->
                <!--android:gravity="center"-->
                <!--android:text="获取验证码"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent" />-->
        <!--</RelativeLayout>-->

    </LinearLayout>

    <Button
        android:id="@+id/bt_save"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:textSize="@dimen/x16"
        android:textColor="@color/color_primary_white"
        android:text="保存"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/x_full_retangle_deep_blue_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="@dimen/x300"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <TextView
            android:textSize="@dimen/x16"
            android:textColor="#000000"
            android:text="图片上传列表"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_route_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:text="/f/daf/dfef/faef/e/f/e"
            android:textColor="#000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30">
            <ImageView
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/x5"
                android:id="@+id/iv_logo"
                android:src="@mipmap/icon_default_portrait"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30" />
            <ProgressBar
                android:id="@+id/pb_logo"
                android:layout_marginLeft="@dimen/x5"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/x5" />
            <TextView
                android:id="@+id/tv_progress_logo"
                android:textSize="@dimen/x14"
                android:textColor="@color/color_primary_blue"
                android:layout_marginRight="@dimen/x5"
                android:layout_marginLeft="@dimen/x5"
                android:text="0%"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/x10"
            android:background="@color/color_divider_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView

        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x240">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cancel"
                android:textColor="#CD5B55"
                android:layout_marginRight="@dimen/x10"
                android:text="取消"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_start_upload"
                android:textColor="@color/color_primary_blue"
                android:layout_marginRight="@dimen/x5"
                android:text="开始上传"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>

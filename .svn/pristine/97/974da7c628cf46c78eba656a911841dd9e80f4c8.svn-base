<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x180">
        <RelativeLayout
            android:background="@color/color_primary_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">
            <TextView
                android:gravity="center"
                android:text="购买者信息"
                android:textSize="@dimen/x16"
                android:textColor="@color/color_primary_blue"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <LinearLayout
                android:id="@+id/lin_close"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30">
                <ImageView
                    android:src="@drawable/icon_delete"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20" />
            </LinearLayout>

        </RelativeLayout>


          <RelativeLayout
              android:background="@color/color_primary_blue"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <ImageView
                  android:layout_alignParentBottom="true"
                  android:background="@drawable/dialog_backgroud_icon"
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/x60" />
              <LinearLayout
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <de.hdodenhof.circleimageview.CircleImageView
                      android:id="@+id/iv_icon"
                      android:layout_marginTop="@dimen/x20"
                      android:src="@mipmap/ic_launcher"
                      android:layout_width="40dp"
                      android:layout_height="40dp" />
                  <TextView
                      android:textSize="@dimen/x14"
                      android:textColor="@color/color_primary_white"
                      android:id="@+id/tv_name"
                      android:layout_marginTop="@dimen/x15"
                      android:text="于莎莎"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

                  <TextView
                      android:textSize="@dimen/x14"
                      android:textColor="@color/color_primary_white"
                      android:id="@+id/tv_number"
                      android:layout_marginTop="@dimen/x5"
                      android:text="15823849823"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
              </LinearLayout>

          </RelativeLayout>


    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sctjsj.mayk.wowallethost.ui.activity.StoreManageActivity">
    <!--title-->
    <RelativeLayout
        android:background="@color/color_primary_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/storemanage_linear_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_margin="@dimen/x10"
                android:id="@+id/storemanage_iv_back"
                android:src="@mipmap/icon_left_white_arrow"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20" />
        </LinearLayout>

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="编辑店铺信息"
                android:textSize="@dimen/x16"
                android:textColor="@color/color_primary_white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--店铺名称大头贴-->
                <LinearLayout
                    android:layout_marginTop="@dimen/x10"
                    android:background="@color/color_primary_white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--店铺名称-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x40">
                            <ImageView
                                android:layout_marginLeft="@dimen/x10"
                                android:src="@drawable/store_name_icon"
                                android:layout_width="@dimen/x20"
                                android:layout_height="@dimen/x20" />
                            <TextView
                                android:layout_marginLeft="@dimen/x10"
                                android:gravity="center"
                                android:text="店铺名称"
                                android:textSize="@dimen/x14"
                                android:textColor="@color/color_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <EditText
                                android:id="@+id/storemanage_edt_store_name"
                                android:singleLine="true"
                                android:hint=""
                                android:textSize="@dimen/x12"
                                android:background="@null"
                                android:layout_marginLeft="@dimen/x20"
                                android:layout_marginRight="@dimen/x10"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                    </RelativeLayout>

                    <!--店家大头贴  隐藏-->
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x40">
                            <ImageView
                                android:layout_marginLeft="@dimen/x10"
                                android:src="@drawable/store_icon"
                                android:layout_width="@dimen/x20"
                                android:layout_height="@dimen/x20" />
                            <TextView
                                android:textSize="@dimen/x14"
                                android:textColor="@color/color_text"
                                android:layout_marginLeft="@dimen/x10"
                                android:gravity="center"
                                android:text="店家大头贴"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <TextView
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_txt_gray"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp" />
                    </RelativeLayout>


                    <!--上传图片  隐藏-->
                    <LinearLayout
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x120">
                        <ImageView
                            android:id="@+id/storemanage_iv_store_icon"
                            android:src="@drawable/image_add_icon"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_width="@dimen/x150"
                            android:layout_height="@dimen/x60" />
                        <TextView
                            android:text="请点击左侧+上传店家大头贴，图片格式为200*200px"
                            android:gravity="center"
                            android:textSize="@dimen/x12"
                            android:layout_margin="@dimen/x10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/x10"
                    android:orientation="vertical"
                    android:background="@color/color_primary_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--品牌介绍-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x40">
                            <ImageView
                                android:layout_marginLeft="@dimen/x10"
                                android:src="@drawable/brand_icon"
                                android:layout_width="@dimen/x20"
                                android:layout_height="@dimen/x20" />
                            <TextView
                                android:layout_marginLeft="@dimen/x10"
                                android:gravity="center"
                                android:text="品牌介绍"
                                android:textSize="@dimen/x14"
                                android:textColor="@color/color_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <TextView
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_txt_gray"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:gravity="clip_vertical"
                            android:id="@+id/storemanage_edt_brand_introduction"
                            android:background="@null"
                            android:layout_margin="@dimen/x10"
                            android:hint="商家介绍"
                            android:textSize="@dimen/x12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <!--店家logo-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@color/color_primary_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--店家大头贴-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x40">
                            <ImageView
                                android:layout_marginLeft="@dimen/x10"
                                android:src="@drawable/store_logo_icon"
                                android:layout_width="@dimen/x20"
                                android:layout_height="@dimen/x20" />
                            <TextView
                                android:layout_marginLeft="@dimen/x10"
                                android:gravity="center"
                                android:text="店家logo"
                                android:textSize="@dimen/x14"
                                android:textColor="@color/color_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <TextView
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_txt_gray"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp" />
                    </RelativeLayout>
                    <!--上传图片-->
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x120">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:id="@+id/storemanage_iv_logo"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_width="@dimen/x100"
                            android:layout_height="@dimen/x100" />
                        <TextView
                            android:id="@+id/tv_to_choose"
                            android:text="+ 选择新的 logo"
                            android:gravity="center"
                            android:textSize="@dimen/x16"
                            android:layout_margin="@dimen/x10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <!--企业地址，联系电话-->
                <LinearLayout
                    android:background="@color/color_primary_white"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--企业地址-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x40">
                            <ImageView
                                android:layout_marginLeft="@dimen/x10"
                                android:src="@drawable/adress_icon"
                                android:layout_width="@dimen/x20"
                                android:layout_height="@dimen/x20" />
                            <TextView
                                android:layout_marginLeft="@dimen/x10"
                                android:gravity="center"
                                android:text="企业地址"
                                android:textSize="@dimen/x14"
                                android:textColor="@color/color_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <EditText
                                android:id="@+id/storemanage_edt_adress"
                                android:singleLine="true"
                                android:hint="请填写"
                                android:textSize="@dimen/x12"
                                android:background="@null"
                                android:layout_marginLeft="@dimen/x20"
                                android:layout_marginRight="@dimen/x10"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <TextView
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_alignParentBottom="true"
                            android:background="@color/color_txt_gray"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp" />
                    </RelativeLayout>

                    <!--联系电话-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x40">
                            <ImageView
                                android:layout_marginLeft="@dimen/x10"
                                android:src="@drawable/phone_icon"
                                android:layout_width="@dimen/x20"
                                android:layout_height="@dimen/x20" />
                            <TextView
                                android:layout_marginLeft="@dimen/x10"
                                android:gravity="center"
                                android:text="联系电话"
                                android:textSize="@dimen/x14"
                                android:textColor="@color/color_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <EditText
                                android:id="@+id/storemanage_edt_phone"
                                android:singleLine="true"
                                android:hint="请填写"
                                android:textSize="@dimen/x12"
                                android:background="@null"
                                android:layout_marginLeft="@dimen/x20"
                                android:layout_marginRight="@dimen/x10"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">
            <TextView
                android:id="@+id/storemanage_tv_save"
                android:gravity="center"
                android:textSize="@dimen/x14"
                android:background="@color/color_primary_blue"
                android:text="保存"
                android:textColor="@color/color_primary_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>

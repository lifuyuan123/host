<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting_feed_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sctjsj.mayk.wowallethost.ui.activity.SettingFeedBackActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:id="@+id/setting_feedback_back_rl"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="使用反馈"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            />
        <TextView
            android:id="@+id/setting_feedback_submit_txt"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:text="提交"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x13"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary_white"
        android:layout_marginTop="@dimen/x10"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:src="@mipmap/ic_setting_wr"
                android:layout_marginLeft="@dimen/x10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:text="使用反馈"
                android:textSize="@dimen/x15"
                android:textColor="@color/text_color"
                />
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/x310"
            android:layout_height="@dimen/x1"
            android:background="@color/color_divider_gray"
            android:layout_marginLeft="@dimen/x10"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:background="@null"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:padding="@dimen/x10"
            android:hint="填写使用反馈"
            android:gravity="top"
            />
    </LinearLayout>
</LinearLayout>

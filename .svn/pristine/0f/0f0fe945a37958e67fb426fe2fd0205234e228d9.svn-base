<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.ForgetPwdActivity">

<!--title-->
    <RelativeLayout
        android:background="@color/color_primary_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">

        <RelativeLayout
            android:id="@+id/rela_back"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/icon_left_white_arrow"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25" />
        </RelativeLayout>

        <TextView
            android:textSize="@dimen/x18"
            android:layout_centerInParent="true"
            android:textColor="@color/color_primary_white"
            android:text="忘记密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/color_fade_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--输入手机号-->
            <RelativeLayout
                android:background="@drawable/x_normal_white_white_retangle_border"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40">

                <EditText
                    android:id="@+id/edt_phoneNum"
                    android:singleLine="true"
                    android:inputType="number"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginLeft="@dimen/x10"
                    android:hint="请输入手机号"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40">
                <RelativeLayout
                    android:background="@drawable/x_normal_white_white_retangle_border"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:textSize="@dimen/x15"
                        android:inputType="number"
                        android:layout_centerInParent="true"
                        android:id="@+id/edt_piccode"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:hint="请输入验证码"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_marginLeft="@dimen/x10"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rela_picCode"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </RelativeLayout>

            </LinearLayout>



            <Button
                android:id="@+id/act_forget_pwd_btn_to_next"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginLeft="@dimen/x20"
                android:textSize="@dimen/x16"
                android:textColor="@color/color_primary_white"
                android:text="获取短信验证码"
                android:layout_marginTop="@dimen/x20"
                android:background="@drawable/x_full_retangle_deep_blue_border"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40" />
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_beautician_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sctjsj.mayk.wowallethost.ui.activity.BeauticianManageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:id="@+id/beautician_back_rl"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="店员管理"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            android:layout_marginRight="@dimen/x40"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/color_primary_white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:src="@drawable/edit_store_topitem_icon"
            android:layout_marginLeft="@dimen/x10"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="店员"
            android:textSize="@dimen/x15"
            android:textColor="@color/text_color"
            android:layout_marginLeft="@dimen/x10"
            />
        <TextView
            android:id="@+id/beautican_mange_del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="删除"
            android:gravity="center"
            android:padding="@dimen/x10"
            android:textSize="@dimen/x13"
            android:textColor="@color/text_color"
            />

    </LinearLayout>
    <TextView
        android:layout_width="@dimen/x305"
        android:layout_height="@dimen/x1"
        android:background="@color/color_fade_gray"
        android:layout_marginLeft="@dimen/x15"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/beautician_layout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <com.cjj.MaterialRefreshLayout
                android:id="@+id/beautician_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/beautician_rcv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_primary_white"
                    />
            </com.cjj.MaterialRefreshLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/beauticanNo_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/x10"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:src="@drawable/ic_error"
                android:layout_marginTop="@dimen/x120"
                />
            <TextView
                android:layout_width="@dimen/x180"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/x10"
                android:text="暂无店员"
                android:textSize="@dimen/x14"
                android:textColor="@color/text_color"
                />
        </LinearLayout>

        <TextView
            android:background="@color/color_primary_blue"
            android:id="@+id/beautician_buttom_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_alignParentBottom="true"
            android:text="增加店员"
            android:gravity="center"
            android:textSize="@dimen/x14"
            android:textColor="@color/color_primary_white"
            />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sctjsj.mayk.wowallethost.ui.activity.SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/setting_back"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x40"
            android:layout_height="match_parent"
            android:text="设置"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/color_primary_white"
        android:layout_marginTop="@dimen/x7"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:src="@mipmap/ic_setting_zd"
            android:layout_marginLeft="@dimen/x15"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="手机震动提醒"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:textSize="@dimen/x14"
            android:textColor="@color/color_primary_black"
            />
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/setting_PhoneState_tog"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x15"/>
    </LinearLayout>
    <TextView
        android:background="@color/app_fade_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1" />
    <LinearLayout
        android:id="@+id/lin_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x46"
        android:background="@color/color_primary_white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:src="@mipmap/ic_setting_info"
            android:layout_marginLeft="@dimen/x15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="软件版本"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            android:textSize="@dimen/x14"
            android:textColor="@color/color_primary_black"
            />
        <TextView
            android:id="@+id/setting_versions_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="@dimen/x14"
            android:layout_marginRight="@dimen/x20"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:text="退出登陆"

        android:background="@color/red_money"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="@dimen/x20"
        android:textSize="@dimen/x15"
        android:id="@+id/setting_backLogin_txt"
        />
</LinearLayout>

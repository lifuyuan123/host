<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_primary_blue"
    tools:context=".ui.activity.LoginActivity">



    <!--大 logo-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150">
        <ImageView
            android:src="@mipmap/login_logo_icon"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100" />
    </RelativeLayout>

    <!--帐号-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/x_normal_white_blue_retangle_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">

        <RelativeLayout
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/icon_user_white"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25" />
        </RelativeLayout>

        <EditText
            android:id="@+id/login_edt_user"
            android:textSize="@dimen/x15"
            android:layout_gravity="center_vertical"
            android:textColorHint="@color/color_primary_white"
            android:gravity="center_vertical"
            android:hint="请输入账号"
            android:singleLine="true"
            android:textColor="@color/color_primary_white"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--确认密码-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/x_normal_white_blue_retangle_border"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="@dimen/x40"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/icon_pwd_white"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/x25" />
            </RelativeLayout>

            <EditText
                android:id="@+id/login_edt_pass"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/x15"
                android:textColorHint="@color/color_primary_white"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="@color/color_primary_white"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>





    <!--注册-->
    <Button
        android:id="@+id/login_bt"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:textSize="@dimen/x16"
        android:textColor="@color/color_primary_white"
        android:text="登录"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/x_full_retangle_deep_blue_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/login_lin_contract"
            android:layout_marginTop="@dimen/x15"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/color_primary_white"
                android:text="点击登陆则表示同意"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/color_pure_yellow"
                android:text="《商家合约》"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/act_login_tv_to_forget_pwd"
                android:layout_marginBottom="@dimen/x10"
                android:textColor="@color/color_primary_white"
                android:text="忘记密码"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
           <!-- <TextView
                android:layout_marginBottom="@dimen/x10"
                android:textColor="@color/color_primary_white"
                android:text=" | "
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/act_login_tv_to_register1"
                android:layout_marginBottom="@dimen/x10"
                android:textColor="@color/color_pure_yellow"
                android:text="商家入驻"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<com.sctjsj.basemodule.base.ui.widget.layout.SwipeMenuLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:ios="true"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:id="@+id/ll_classify_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/color_primary_white"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/x320"
            android:layout_height="@dimen/x50">
            <CheckBox
                android:id="@+id/item_project_classify_cb"
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25" />

            <TextView
                android:id="@+id/tv_name"
                android:textSize="@dimen/x16"
                android:layout_marginLeft="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:text="美容"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:background="@color/color_divider_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />
    </LinearLayout>

    <!-- 以下都是侧滑菜单的内容依序排列 -->




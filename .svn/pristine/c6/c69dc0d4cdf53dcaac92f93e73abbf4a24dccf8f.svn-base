<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gathering_qr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sctjsj.mayk.wowallethost.ui.activity.GatheringQrActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:id="@+id/gatheringQr_back_rl"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="收款"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            android:layout_marginRight="@dimen/x40"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_primary_blue"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_marginTop="@dimen/x50"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x50"
            android:background="@drawable/qr_title_shape"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:src="@mipmap/ic_gathering"
                android:layout_marginLeft="@dimen/x15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我要收款"
                android:textColor="#FEB013"
                android:layout_marginLeft="@dimen/x5"
                android:textSize="@dimen/x14"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x320"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/qr_body_shape"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描下方二维码向我付钱"
                android:textColor="@color/text_color"
                android:layout_marginTop="@dimen/x30"
                android:textSize="@dimen/x13"
                />
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/gatheringQr_Img"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/x200"
                android:layout_marginTop="@dimen/x30"
                />
            <RelativeLayout
                android:id="@+id/gatheringQr_save_rl"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x40"
                android:gravity="center"
                android:layout_marginTop="@dimen/x10"
                >
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存图片"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/x13"
                    />
            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>

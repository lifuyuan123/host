<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sctjsj.mayk.wowallethost.ui.activity.ChooseSexActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:background="@color/color_primary_blue"
        >
        <RelativeLayout
            android:id="@+id/addnewbeautician_back_rl"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/icon_left_white_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="选择性别"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x18"
            />
        <TextView
            android:id="@+id/addnewbeautician_save_txt"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:text="保存"
            android:gravity="center"
            android:textColor="@color/color_primary_white"
            android:textSize="@dimen/x13"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <RadioGroup
         android:gravity="center"
         android:layout_marginLeft="@dimen/x10"
         android:layout_marginRight="@dimen/x10"
         android:id="@+id/radioGroup"
         android:weightSum="2"
         android:layout_marginTop="@dimen/x10"
         android:layout_marginBottom="@dimen/x10"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <RadioButton
             android:id="@+id/radbt_boy"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:text="男"
             android:textColor="@color/primary_text"
             android:textSize="@dimen/x13"
             android:layout_height="match_parent" />
         <RadioButton
             android:id="@+id/radbt_girl"
             android:textColor="@color/primary_text"
             android:text="女"
             android:textSize="@dimen/x13"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent" />
     </RadioGroup>
    </LinearLayout>


</LinearLayout>

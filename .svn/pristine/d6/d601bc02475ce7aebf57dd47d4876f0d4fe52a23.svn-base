<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/x_normal_white_white_retangle_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">

            <RelativeLayout
                android:id="@+id/close"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_circle_fork_gray"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20" />
            </RelativeLayout>

            <TextView
                android:textSize="@dimen/x16"
                android:textColor="#000000"
                android:text="请输入支付密码"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:background="@color/dividers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30">

            <TextView
                android:id="@+id/tv_amount"
                android:textSize="@dimen/x18"
                android:textColor="#000000"
                android:layout_centerInParent="true"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:background="@color/dividers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />

        <RelativeLayout
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_balance_blue"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000000"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:background="@color/dividers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1" />

        <com.example.mayikang.wowallet.ui.xwidget.view.SecurityCodeView
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x20"
            android:id="@+id/security_code_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40">

        </com.example.mayikang.wowallet.ui.xwidget.view.SecurityCodeView>


        <TextView
            android:id="@+id/tv_to_set_pay_pwd"
            android:layout_marginBottom="@dimen/x20"
            android:textSize="@dimen/x14"
            android:textColor="@color/color_primary_blue"
            android:text="设置支付密码?"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>

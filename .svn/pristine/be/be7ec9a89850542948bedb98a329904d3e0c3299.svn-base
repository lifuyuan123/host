<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/color_divider_gray"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sctjsj.mayk.wowallethost.ui.activity.AddOrModifyProjectClassify">
    <RelativeLayout
        android:background="@color/color_primary_blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <RelativeLayout
            android:id="@+id/act_add_or_modify_classify_rl_back"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_left_white_arrow"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20" />
        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/x18"
            android:textColor="@color/color_primary_white"
            android:id="@+id/act_add_or_modify_classify_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="@dimen/x10"
            android:layout_centerVertical="true"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/x16"
            android:textColor="@color/color_primary_white"
            android:id="@+id/act_add_or_modify_classify_tv_op"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:background="@color/color_divider_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x8" />


    <RelativeLayout
        android:background="@color/color_primary_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50">
        <EditText
            android:id="@+id/act_add_or_modify_classify_et_input"
            android:textSize="@dimen/x16"
            android:hint="请输入分类名称"
            android:background="@null"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>



</LinearLayout>
